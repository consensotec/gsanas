<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"
	    	android:text="@string/str_hydrometer_data_new_hydrometer" android:layout_marginBottom="10dp"
	    	android:background="@drawable/bar" android:textStyle="bold" />	    	
	
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >	    
		<TextView android:id="@+id/stampnumbertext" android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:layout_weight="0.10" android:text="@string/str_hydrometer_stamp_number" ></TextView>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_required" android:textStyle="bold" android:textColor="#FF0000"/>
		<EditText android:id="@+id/hydrometer_stampnumbereditText" android:layout_height="wrap_content" android:layout_width="wrap_content"
		    android:layout_weight="0.72" android:maxLength="9" android:inputType="number" />
				
	</LinearLayout>
	
	<ImageView android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
    		<TextView android:id="@+id/hydrometertrestletext" android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:layout_weight="0.54" android:text="@string/str_hydrometer_trestle" ></TextView>		
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_required" android:textStyle="bold" android:textColor="#FF0000"/>
		<RadioGroup android:id="@+id/hydrometer_hydrometertrestleradiogroup" android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="0.55">
		    <RadioButton android:id="@+id/hydrometer_withradiobutton" android:text="@string/str_hydrometer_with" android:checked="true"/>
		    <RadioButton android:id="@+id/hydrometer_withoutradiobutton" android:text="@string/str_hydrometer_without" />
		</RadioGroup>
				
	</LinearLayout>

	<ImageView android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	
	
	<Button android:id="@+id/hydrometer_makehydrometerchangedbutton" android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" android:text="@string/str_hydrometer_make_hydrometer_changed"  />
		    
	<Button android:id="@+id/hydrometer_backbutton" android:layout_width="120dp"
		    android:layout_height="wrap_content" android:text="@string/str_stage_back"  />
	
	<Button android:id="@+id/btMenu" android:layout_width="fill_parent" 
	 android:layout_height="wrap_content" android:text="@string/str_menu"  />
	

</LinearLayout>