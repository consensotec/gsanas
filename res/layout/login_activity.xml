<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >
    
    <LinearLayout android:orientation="vertical" android:background="#55412f" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="top" >    
		<ImageView android:layout_height="wrap_content" android:src="@drawable/toplogin" android:id="@+id/imgTopLogin" android:layout_width="wrap_content"></ImageView>
	</LinearLayout>
	
	<!-- versao -->
	<LinearLayout android:orientation="horizontal" android:layout_marginTop="5px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="top"  >    
        
		<TextView android:textColor="#ffffff" android:id="@+id/version" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="vertical" android:layout_width="200px" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_weight="4">
		<TextView style="@style/label" android:text="@string/str_login_user" ></TextView>  
  		<EditText android:layout_width="200px" android:layout_marginBottom="10px" android:layout_height="40px" android:id="@+id/edtLogin" android:singleLine="true" android:inputType="textEmailAddress"></EditText>
		
		<TextView style="@style/label" android:text="@string/str_login_pass"></TextView>  
		<EditText android:layout_width="fill_parent"  android:layout_height="40px" android:id="@+id/edtPassword" android:password="true" android:singleLine="true"></EditText>
	
		<CheckBox android:id="@+id/checkRemeber" android:textSize="12px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_login_remember"></CheckBox>
	
	<Button android:text="@string/str_login_login" android:id="@+id/btLogin" android:layout_width="wrap_content" android:layout_gravity="right" android:textColor="#ffffff" android:layout_height="wrap_content" android:background="@drawable/login_button"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="bottom" android:layout_weight="2">
		<ImageView android:layout_height="wrap_content" android:src="@drawable/bottonlogin" android:id="@+id/btLogin" android:layout_width="wrap_content" ></ImageView>
	</LinearLayout>	
</LinearLayout>
