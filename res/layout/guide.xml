<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="#000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >
<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:shrinkColumns="2"
    >
    
    <TextView android:textColor="#ffffff" android:layout_width="fill_parent" android:paddingTop="9px" android:layout_height="wrap_content"  android:text="@string/str_guide_title" android:background="#353535" />
    
	<TableRow android:layout_marginTop="10px">
		 <TextView
		 	android:text="@string/str_guide_status"
            android:width="42dip" 
            />
        <TextView
            android:text="@string/str_guide_order"
            android:padding="5dip"
            android:paddingLeft="9dip" />
        <TextView
            android:text="@string/str_guide_address"
            android:padding="3dip" 
            android:paddingLeft="7dip" />
    </TableRow>

	
    
	<ListView 
		android:id = "@+id/list"
		android:layout_weight="1"
		android:layout_width = "fill_parent"
		android:layout_height = "fill_parent"
	></ListView>  
	
	<Button
	    android:id="@+id/btMenu"
	    android:layout_marginTop="5dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/str_menu" />		
	
</TableLayout>
</LinearLayout>

