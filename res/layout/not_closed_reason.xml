<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textColor="#fff"
    >   
    <ImageView android:layout_marginTop="15px" android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TableLayout android:layout_marginTop="15px" xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
	    
	    <TableRow>
	    	<ImageView android:src="@drawable/notexecutedicon" android:layout_marginRight="10px" />
	    	<TextView android:textColor="#fff" android:textStyle="bold" android:text="@string/str_not_closed_reason_icon_title" android:width="110px"/>
	    </TableRow>
	    
    </TableLayout>
    <ImageView android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
   
    <TextView android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/str_local_address_title"
    	android:layout_marginTop="8px"
    	android:paddingTop="15px"
    	android:paddingLeft="4px"
    	android:id="@+id/addresstitle"
    	android:background="@drawable/addresstitle"
    	android:textStyle="bold" />
  
    <TextView android:id="@+id/addressText" android:textColor="#fff" android:layout_width="fill_parent" android:layout_height="wrap_content" ></TextView>
   
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" >
    	<TextView android:id="@+id/refPoint" android:textStyle="bold" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_local_ref"></TextView>
    	<TextView android:id="@+id/refPointText" android:textStyle="bold" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    
 <TextView android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/str_not_closed_reason_title"
    	android:layout_marginTop="8px"
    	android:paddingTop="15px"
    	android:paddingLeft="4px"
    	android:id="@+id/reasontitle"
    	android:background="@drawable/reasontitle"
    	android:textStyle="bold" />   	
    	
    	<Spinner android:id="@+id/reasonSpinner"
   		android:layout_height="wrap_content"
   	 	android:layout_width="280px"/>
   	 	
	<LinearLayout android:orientation="horizontal"
		android:id="@+id/spinnerLl"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >	
    	
    	<Spinner android:id="@+id/equipSpinner"
   			android:layout_height="wrap_content"
   	 		android:layout_width="280px"
   	 		android:textColor="#000"/>
   	 		
	</LinearLayout>
	
	<TableLayout android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
		<TableRow android:gravity="right" android:layout_marginTop="15px">
			<Button android:id="@+id/btCancel"  android:text="@string/bt_edit_address_cancel" android:layout_width="115px" android:layout_height="wrap_content" />
			<Button android:id="@+id/btEditReason"  android:text="@string/bt_edit_address_edit" android:layout_width="115px" android:layout_height="wrap_content" />
		</TableRow>
	</TableLayout>
	
	 

</LinearLayout>
