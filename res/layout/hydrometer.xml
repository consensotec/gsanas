<?xml version="1.0" encoding="utf-8"?>	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linearlayout_hydrometer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"
	    	android:text="@string/str_hydrometer_change" android:id="@+id/hydrometertitle" android:layout_marginBottom="10dp"
	    	android:background="@drawable/hydrometertitle" android:textStyle="bold" />	    	

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" >
    
	    <TextView android:id="@+id/propertyidtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_property_id"></TextView>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_required" android:textStyle="bold" android:textColor="#FF0000"/>	
		<EditText android:id="@+id/hydrometer_propertyideditText"  android:maxLength="9"  android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
				
	</LinearLayout>
	
	<ImageView android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp"
	    	android:text="@string/str_hydrometer_data_now_hydrometer" android:id="@+id/data_now_hidrometertitle"
	    	android:background="@drawable/bar" android:textStyle="bold" />	    	

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" >
    
		<TextView android:id="@+id/letternumbertext" android:layout_width="wrap_content" android:layout_height="wrap_content" 
		    android:layout_weight="0.045" android:text="@string/str_hydrometer_reading_number" ></TextView>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_required" android:textStyle="bold" android:textColor="#FF0000"/>
		<EditText android:id="@+id/hydrometer_letternumbereditText" android:maxLength="9" android:inputType="number" android:layout_height="wrap_content" android:layout_weight="0.77" android:layout_width="wrap_content"/>
				
	</LinearLayout>
	
	<ImageView android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp"
	    	android:text="@string/str_hydrometer_data_new_hydrometer" android:id="@+id/data_new_hidrometertitle"
	    	android:background="@drawable/bar" android:textStyle="bold" />	    	

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" >
    
		<TextView android:id="@+id/hydrometernumbertext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_hydrometer_number"></TextView>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_hydrometer_required" android:textStyle="bold" android:textColor="#FF0000"/>
		<EditText android:id="@+id/hydrometer_hydrometernumbereditText" android:maxLength="10" android:inputType="text" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
				
	</LinearLayout>			
 <Button android:id="@+id/hydrometer_backbutton" android:visibility="gone" android:layout_width="0dp"  android:layout_weight="0.4"
        android:layout_height="wrap_content" android:text="@string/str_stage_back" />

	<Button android:id="@+id/hydrometer_nextbutton" android:layout_width="wrap_content" android:layout_gravity="right"
	android:layout_marginTop="10dp" android:layout_height="match_parent" android:text="@string/str_hydrometer_next"  />
	
	<Button android:id="@+id/btMenu" android:layout_width="fill_parent" 
	android:layout_marginTop="5dp" android:layout_height="match_parent" android:text="@string/str_menu"  />

</LinearLayout>